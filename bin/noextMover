#!/usr/bin/bash

dest="$HOME/Downloads/"

while IFS= read -r -d '' f
do 
     mime="$(file -b --mime-type "$f")"
     case $mime in
         *text/x-perl) mv -vn "$f" "$dest/scripts" ;;
         *text/x-awk) mv -vn "$f" "$dest/scripts" ;;
         *text/csv) mv -vn "$f" "$dest/documents" ;;
         *audio/ogg) mv -vn "$f" "$dest/audio" ;;
         *image/png) mv -vn "$f" "$dest/images" ;;
         *application/x-wine-extension-ini) mv -vn "$f" "$dest/documents" ;;
         *shellscript) mv -vn "$f" "$dest/scripts" ;;
         *text/x-shellscript) mv -vn "$f" "$dest/scripts" ;;
         *text/plain) mv -vn "$f" "$dest/documents" ;;
         *) echo "idk its a $mime" ;;
esac
done < <(find . -maxdepth 1 -not -path '*/.*' -type f -prune -print0)

