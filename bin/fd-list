#!/usr/bin/env bash


COLOR_NC=$(echo -e '\e[0m') # No Color
COLOR_BLACK='\e[0;30m'
COLOR_GRAY='\e[1;30m'
COLOR_RED='\e[0;31m'
COLOR_LIGHT_RED='\e[1;31m'
COLOR_GREEN='\e[0;32m'
COLOR_LIGHT_GREEN=$(echo -e '\e[1;32m')
COLOR_BROWN='\e[0;33m'
COLOR_YELLOW='\e[1;33m'
COLOR_BLUE='\e[0;34m'
COLOR_LIGHT_BLUE=$(echo -e '\e[1;34m')
COLOR_PURPLE='\e[0;35m'
COLOR_LIGHT_PURPLE='\e[1;35m'
COLOR_CYAN='\e[0;36m'
COLOR_LIGHT_CYAN='\e[1;36m'
COLOR_LIGHT_GRAY='\e[0;37m'
COLOR_WHITE='\e[1;37m'



app="$1"

for p in $(pidof "$app"); do echo "${COLOR_LIGHT_GREEN}we are checking opening files for this process${COLOR_NC}: "${COLOR_LIGHT_BLUE}$p${COLOR_NC}"" && ls -l /proc/"$p"/fd | awk '{print $9" "$10" "$11}'; done

