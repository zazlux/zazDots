#!/usr/bin/env bash

[[ "$1" ]] && q="$1" || read -p "Enter Search Query: " q
[[ "$q" ]] || exit

pkg="$(xbps-query -Rs "$q" | fzf --prompt "Select Packages: " -m | awk '{ print $2 }')"

echo "$pkg" 


